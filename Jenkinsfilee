stage('Build Stage') {
    steps {
        sh '''
        python3 -m venv venv
        . venv/bin/activate
        pip install --upgrade pip
        pip install -r requirements.txt
        '''
    }
}

stage('Testing Stage') {
    steps {
        sh '''
        . venv/bin/activate
        pytest --junitxml=test-reports/results.xml
        '''
    }
}

